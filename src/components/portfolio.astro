---
import Buttons from "./buttons.astro"
import Proyectos from "../components/proyectos.astro";
import Experiencia from "./experiencia.astro";
---
<section class="mt-20 mb-30 grid  border-t-2 shadow-lg border-white/5 " id="portafolio">
        <div class="flex flex-col items-center w-full pb-11 mt-2">
        <h1 class="text-white text-4xl md:text-5xl font-bold p-2 text-center">
            Porta<span class="inline-block bg-gradient-to-r from-red-600 to-indigo-400 bg-clip-text text-transparent">folio</span>
        </h1>
        <div class="h-0.5 w-3/4 sm:w-[350px] mt-2 bg-gradient-to-r from-red-600 to-indigo-400 rounded-full"></div>
    </div>     

    <Buttons>
        <div slot="proyectos">
            <Proyectos />
        </div>
        <div slot="experiencias" class="m-auto">
            <Experiencia />
        </div>
    </Buttons>
</section>

